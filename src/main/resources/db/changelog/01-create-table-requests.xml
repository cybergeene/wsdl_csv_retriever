<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="e.mednov">
        <createTable tableName="requests"
                     remarks="Table for wsdl's requests logs">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="code_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="filenames" type="varchar(100)"/>
            <column name="error" type="varchar(100)"/>
        </createTable>

        <createTable tableName="catalog"
                     remarks="A table for catalog">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="catalog" baseColumnNames="id"
                                 constraintName="requests_fk"
                                 referencedTableName="requests" referencedColumnNames="code_id"/>
    </changeSet>
</databaseChangeLog>